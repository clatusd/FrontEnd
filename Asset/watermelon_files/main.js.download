/*Fix for IE showing errors*/
if (!window.console) {
    window.console = {};
}
if (!console.log) {
    console.log = function() {};
}

window.onload = function() {
    showAd();
};

/* Runs when the page is completely loaded.*/
function showAd() {
    Container.style.display = "block";
    /*Assign Variables*/

    /*
    ------------------
    A N I M A T I O N
    ------------------
    */

    var tl_Main = gsap.timeline({
        delay: 0.5,
        paused: false,
        repeat: 0,
        repeatDelay: 0,
        defaults: {
            duration: 0.5
        }
    });

    tl_Main
        /*Frame1*/
        .add(function() {
            // disableCTA()
        })
        .from(copy1, {
            opacity: 0
        })
        .to(copy1, {
            opacity: 0
        }, "+=3")
        /*Frame2*/
        .to(BG1, {
            duration: 1,
            scale: 1.25,
            transformOrigin: "300px 45px",
            ease: Quad.easeInOut
        }, "-=0.5")
        .from(copy2, {
            opacity: 0
        }, "-=0.5")
        .from(slider, {
            right: "100%",
            ease: Quad.easeInOut
        }, "+=3")
        /*Frame4*/
        .from(endFrame1, {
            opacity: 0
        })
        .to(endFrame1, {
            opacity: 0
        }, "+=1.5")
        .from(endFrame2, {
            opacity: 0
        })
        .to(endFrame2, {
            opacity: 0
        }, "+=1.5")
        .from(endFrame3, {
            opacity: 0
        })
        .from(CTA, {
            x: "+=100%"
        })
}

function enableCTA() {
    Container.addEventListener("mouseover", CTARollOver);
    Container.addEventListener("mouseout", CTARollOff);
}

function disableCTA() {
    Container.removeEventListener("mouseover", CTARollOver);
    Container.removeEventListener("mouseout", CTARollOff);
}

